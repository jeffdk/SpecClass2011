    "  #Note that both vectors must have the same number of components.  \n"
    "  FirstVectorToAdd = double, double, double, ...                    \n"
    "  SecondVectorToAdd = double, double, double, ...                   \n"
    "                                                                    \n";
}

MyVector<double> sumVectors(const MyVector<double>& A,
			    const MyVector<double>& B);

